<div>
<h1>Listing Posts</h1>
<%= paginate(@posts) %>
<% @posts.each do |post| %>
  <div>
    <p><%= post.title %></p>
    <p><%= post.text %></p>
      <%= link_to 'Show', post_path(post),class: "btn btn-primary " %>
      <%if user_signed_in? && post.user_id == current_user.id %>
        <%= link_to 'Edit', edit_post_path(post),class: "btn btn-success" %>
        <%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' },class:"btn btn-primary" %>
      <%end%>
  </div>
<% end %>
</div>